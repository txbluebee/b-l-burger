<% layout('layouts/auth-layout') %>

  <section class="section-form">
    <div class="container">
      <div class="title">
        <div class="h2">
          b&amp;l burger
          <span>best dining experience</span>
        </div>
      </div>
      <div class="login-block">
        <div class="h5">login</div>
        <form
          action="/auth/signin"
          method="POST"
        >
          <label for="">Email:</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">
                <i class="fa fa-envelope-o fa-fw"></i>
              </span>
            </div>
            <input type="email" name="email" class="form-control" placeholder="email" required>
          </div>
          <label for="">Password: </label>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">
                <i class="fa fa-key fa-fw"></i>
              </span>
            </div>
            <input type="password" name="password" class="form-control" placeholder="password" required>
          </div>
          <small class="form-text"><%= errorMessage %></small>
          <div class="d-flex justify-content-around mt-5">
            <a href="/auth/signup" class="btn btn-secondary">Register</a>
            <button type="submit" class="btn btn-orange mt-0">sign in</button>
          </div>
        </form>
      </div>
  </section>